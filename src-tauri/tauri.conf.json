{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Resource toolkit",
  "version": "0.2.1",
  "identifier": "com.bobro.rtoolkit",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Resource Toolkit",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/EugIBP/r-toolkit/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUxOTNDMjYwQUZBQ0Y0NkUKUldSdTlLeXZZTUtUNFh5VjlianFFTkRTQmp1Ykd5czY5Lzd0VHZYRDhUMXltaENhMGhhN3ZQVmUK"
    }
  }
}
